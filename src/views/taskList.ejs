<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>B-Productive - Listas</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body class="bg-dark text-white">
    <!-- header fixo -->
    <%- include('partials/header') %>

    <div class="container mt-5">
      <div class="text-center">
        <h1 class="fw-bold">Organize suas tarefas</h1>
      </div>

      <!-- Criar Nova Lista -->
      <div class="d-flex justify-content-center my-4">
        <input
          type="text"
          class="form-control w-50 me-2"
          placeholder="Nome da nova lista de tarefas"
          id="input-name-task"
        />
        <button class="btn btn-primary" id="btn-new-Task-List">
          Criar Nova Lista
        </button>
      </div>
    </div>

    <!-- Todas as listas de tarefas -->
    <ol class="list-group list-group">
      <% allTask.forEach((element) => { %>

      <li
        class="list-group-item d-flex justify-content-between align-items-start"
      >
        <div class="ms-2 me-auto task-li">
          <div class="fw-bold">
            <%= element.name %>
            <span class="badge text-bg-primary rounded-pill"
              ><%= element.task.length %></span
            >
          </div>
        </div>

        <div class="btn-actions">
          <button
            type="button"
            class="btn btn-primary btn-action"
            id="abrir-<%= element.id%>"
          >
            Abrir
          </button>
          <button
            type="button"
            class="btn btn-warning btn-action"
            id="editar-<%= element.id%>"
          >
            Editar
          </button>
          <button
            type="button"
            class="btn btn-danger btn-action"
            id="delete-<%= element.id%>"
          >
            Excluir
          </button>
        </div>
      </li>
      <%})%>
    </ol>

    <!-- footer fixo -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/tasklist.js"></script>
  </body>
</html>
